{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "react-app",
    "plugin:import/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "import"],
  "rules": {
    "no-unused-vars": 1,
    "react/no-children-prop": 1,
    "react/prop-types": 0,
    "react/no-unescaped-entities": 1,
    "react/jsx-key": 1,
    "import/no-unresolved": 2,
    "react/react-in-jsx-scope": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"],
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
